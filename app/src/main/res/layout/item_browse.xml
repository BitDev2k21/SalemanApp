<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="14dp"
        android:background="@color/white"
        android:elevation="100dp"
        app:cardCornerRadius="10dp"
        app:strokeColor="#E2E2E2"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="3"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_parle_ji" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtProName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="PARLE-G Original Gluco \nBiscuits Super Offer"
                        android:textColor="#757575"
                        android:textSize="12.5sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray_line_color" />

            <LinearLayout
                android:padding="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/product_type"
                        android:textColor="@color/text_colour_grey"
                        android:textSize="@dimen/_10sdp"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/txtProType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/product_type"
                        android:textColor="@color/text_color_green"
                        android:textSize="13.8sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_line_color" />
                <LinearLayout
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/category"
                        android:textColor="@color/text_colour_grey"
                        android:textSize="@dimen/_10sdp"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/txtProCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/product_type"
                        android:textColor="@color/text_color_green"
                        android:textSize="13.8sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_line_color" />
                <LinearLayout
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/company"
                        android:textColor="@color/text_colour_grey"
                        android:textSize="@dimen/_10sdp"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/txtProCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/product_type"
                        android:textColor="@color/text_color_green"
                        android:textSize="13.8sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="@string/mrp_per_unit"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_mrp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/batch_expire_soon"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtBatchExpire"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/shelf_life"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtShelfLife"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/current_stock"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCurrentStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/delievered_stock_current_future"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDeliveredStockCurrentFuture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/undelievered_stock"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtUndeliveredStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="11.3sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/delievered_stock"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDelieveredStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_mrp_grey"
                    android:textSize="11.3sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="Mini. Quantity: "
                    android:textColor="#49536f"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMiniQnty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="#49536f"
                    android:textSize="@dimen/pending_item_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray_line_color" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="@string/remaining_stock"
                    android:textColor="@color/text_colour_grey"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRemainingStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:textColor="@color/text_colour_grey"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>