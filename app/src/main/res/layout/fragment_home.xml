<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.home.HomeFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/green" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp"
                android:visibility="gone"
                app:cardCornerRadius="14dp"
                app:strokeColor="#E2E2E2"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="32dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:lineSpacingExtra="-11.5sp"
                            android:text=" Pankaj Mistry"
                            android:textColor="#000000"
                            android:textSize="17.5sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:lineSpacingExtra="-6.5sp"
                            android:text=" Retailer"
                            android:textColor="#9b9b9b"
                            android:textSize="12.5sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:drawableLeft="@drawable/icon_agency"
                    android:drawablePadding="14dp"
                    android:fontFamily="@font/opensans_bold"
                    android:lineSpacingExtra="-7.8sp"
                    android:text="Reports"
                    android:textColor="#253545"
                    android:textSize="13.8sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="-4sp"
                    android:text="Apr 13, 2021"
                    android:textColor="#757575"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="14dp"
                app:strokeColor="#E2E2E2"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:id="@+id/rlPendingOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPendingOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/circle"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:lineSpacingExtra="-10sp"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="35sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iconRs"
                        android:layout_toRightOf="@+id/txtPendingOrders"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:lineSpacingExtra="7.5sp"
                            android:text="Pending"
                            android:textColor="#9b9b9b"
                            android:textSize="17.5sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:lineSpacingExtra="7.5sp"
                            android:text="Orders"
                            android:textColor="#000000"
                            android:textSize="17.5sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iconRs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/icon_cart" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="14dp"
                app:strokeColor="#E2E2E2"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:id="@+id/rlPendingPayments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPendingPayments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/circle"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:lineSpacingExtra="-10sp"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="35sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/txtPendingPayments"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:lineSpacingExtra="7.5sp"
                            android:text="Pending"
                            android:textColor="#9b9b9b"
                            android:textSize="17.5sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:lineSpacingExtra="7.5sp"
                            android:text="Payments"
                            android:textColor="#000000"
                            android:textSize="17.5sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/shape_25_copy" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="14dp"
                app:strokeColor="#E2E2E2"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:id="@+id/rlItemInCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtOutOfStockItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/circle"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:lineSpacingExtra="-10sp"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="35sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iconCart"
                        android:layout_toRightOf="@+id/txtOutOfStockItems"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:lineSpacingExtra="7.5sp"
                            android:text="Out of stock"
                            android:textColor="#9b9b9b"
                            android:textSize="17.5sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:lineSpacingExtra="7.5sp"
                            android:text="Items"
                            android:textColor="#000000"
                            android:textSize="17.5sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iconCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/shape_37" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>